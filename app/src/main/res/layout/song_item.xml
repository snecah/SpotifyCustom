<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/song_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="40dp"
        android:text="song name"
        app:layout_constraintBottom_toBottomOf="@id/song_picture"
        app:layout_constraintStart_toEndOf="@id/song_picture"
        app:layout_constraintTop_toTopOf="@id/song_picture"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/song_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="author"
        app:layout_constraintTop_toBottomOf="@id/song_name"
        app:layout_constraintStart_toEndOf="@id/song_picture"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>